@model IEnumerable<StorageDBCourseWork.Models.MovingItem>

@{
    ViewBag.Title = "Список перемещений";
}

<h2>Список перемещений</h2>

<p>
    @Html.ActionLink("Создать перемещение", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Дата перемещения")
        </th>
        <th>
            @Html.DisplayName("Откуда")
        </th>
        <th>
            @Html.DisplayName("Куда")
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StorageFrom.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StorageTo.Name)
        </td>

        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Просмотр", "Details", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
